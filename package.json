{
  "name": "@jabz/security-utils",
  "version": "5.1.1",
  "description": "This is a utility package that combines using, 'bcrypt', 'crypto-js', 'jsonwebtoken' and 'object-hash' for storing information in a data base either by hash or encryption along with jwt management.",
  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "lint": "npx eslint . --max-warnings 0",
    "increment": "npm version patch",
    "lint-fix": "eslint --fix",
    "build": "tsc -b",
    "pr-test": "npm run test && lint-fix",
    "test-pack": "npm i && npm run build && npm pack"
  },
  "author": "Joshua Bednaz",
  "license": "MIT",
  "dependencies": {
    "@jabz/math-js": ">=1.0.0",
    "bcrypt": "^5.1.0",
    "crypto-js": "^4.1.1",
    "jsonwebtoken": "^9.0.0",
    "object-hash": "^3.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@jest/globals": "^29.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.1",
    "@types/object-hash": "^3.0.2",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.44.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bednaz98/SecurityUtils.git"
  }
}
